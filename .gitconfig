# User Information
[user]
    name = Nick Russo
    email = nijaru7@gmail.com
    signingkey = /Users/nick/.ssh/id_ed25519.pub

# Core Settings
[core]
    editor = $EDITOR --wait
    excludesFile = ~/.gitignore
    fsmonitor = true
    preloadIndex = true
    untrackedCache = true
    pager = delta
    autocrlf = input
    safecrlf = true
    longpaths = true

# Branch and Checkout Settings
[init]
    defaultBranch = main
[branch]
    sort = -committerdate
[checkout]
    defaultRemote = origin
    workers = 0

# Diff and Merge Settings
[diff]
    algorithm = histogram
    colorMoved = default
    renames = copies
    wsErrorHighlight = all
[merge]
    conflictstyle = zdiff3
    ff = only
[interactive]
    diffFilter = delta --color-only

# Remote Operation Settings
[fetch]
    parallel = 0
    prune = true
    pruneTags = true
    writeCommitGraph = true
    recurseSubmodules = on-demand
[pull]
    prune = true
    pruneTags = true
    rebase = true
[push]
    autoSetupRemote = true
    default = current
    followTags = true

# Rebase and History Settings
[rebase]
    autoStash = true
    autoSquash = true
    updateRefs = true
    missingCommitsCheck = error
[rerere]
    autoupdate = true
    enabled = true

# Submodule Settings
[submodule]
    recurse = true
    fetchJobs = 0

# Security and Signing
[gpg]
    format = ssh
[tag]
    forceSignAnnotated = true
[commit]
    gpgsign = true
[transfer]
    fsckobjects = true

# Display and UI Settings
[color]
    ui = true
[color "status"]
    changed = yellow
[column]
    ui = auto
[status]
    showUntrackedFiles = all
    showStash = true
[log]
    date = iso
[help]
    autocorrect = immediate

# Delta Configuration
[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

# Performance Settings
[pack]
    threads = 0
[maintenance]
    auto = true
    strategy = incremental

# URL Handling
[url "git@github.com:"]
    insteadOf = https://github.com/

# LFS Settings
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

# Aliases
[alias]
    gc = maintenance run --task=gc
    patch = apply --ignore-space-change --ignore-whitespace
    scrub = reset --hard @{upstream}
    rb = rebase
    rbi = rebase -i
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    unpushed = log @{push}..
    staged = diff --cached
