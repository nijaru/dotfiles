[core]
	editor = vim

[checkout]
	defaultRemote = origin
[color "status"]
	changed = yellow
[commit]
	gpgsign = true
[diff]
	algorithm = patience
[fetch]
	prune = true
[init]
	defaultBranch = main
[merge]
	ff = only
[pull]
	ff = only
[push]
	default = simple
	followTags = true
[rebase]
	autosquash = true
[status]
	showUntrackedFiles = all
[transfer]
	fsckobjects = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[alias]
	a = add
	b = branch
	c = commit
	cm = commit -sm
	cln = clone
	co = checkout
	d = diff
	f = fetch
	ls = ls-files
	m = merge
	pl = pull
	plr = pull --rebase
	ps = push
	rs = restore
	s = stash
	sp = stash pop
	sw = switch
	undo = restore --staged
	w = status
	ws = status --short