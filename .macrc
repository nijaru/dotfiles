alias disk="diskutil"
alias eject="diskutil eject"
alias brewin="brew info"
alias caskin="brew cask info"
alias serv="brew services"
# editor
alias a="atom"
alias a.="atom ."
alias a..="atom .."
alias c="code"
alias c.="code ."
alias c..="code .."
# up
alias upb="brew update; brew upgrade"
# backups
alias backbr="echo 'Backing up brews...'; rm -f $HOME/Dropbox/dotfiles/Brewfile.backup; mv $HOME/Dropbox/dotfiles/Brewfile $HOME/Dropbox/dotfiles/Brewfile.backup; brew bundle dump --file=$HOME/Dropbox/   dotfiles/Brewfile"
alias backg="echo 'Backing up git...'; rm -rf $HOME/Dropbox/dotfiles/gitconfig; cp -f $HOME/.gitconfig $HOME/Dropbox/dotfiles/gitconfig"
alias backm="echo 'Backing up micro settings...'; rm -rf $HOME/Dropbox/dotfiles/settings.json; cp $HOME/.config/micro/settings.json $HOME/Dropbox/dotfiles"
alias backz="echo 'Backing up zsh...'; rm -rf $HOME/Dropbox/dotfiles/.zprezto; cp -Rf $HOME/.zprezto $HOME/Dropbox/dotfiles/.zprezto"
# exports
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_INSECURE_REDIRECT=1
export HOMEBREW_AUTO_UPDATE_SECS=604800
export HOMEBREW_GITHUB_API_TOKEN=ef0d185b0abc3763b5e26a0a9451fb7ff83615e4
