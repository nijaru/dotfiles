{
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato - No Italics"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 14,
  "wrap_guides": [80],
  "autosave": "on_focus_change",
  "active_pane_modifiers": { "inactive_opacity": 0.9 },

  "terminal": {
    "enabled": false
  },

  "assistant": {
    "version": "2",
    "enabled": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },

  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          // "lineLength": 88,
          "lint": {
            "ignore": ["E501"]
          }
        }
      }
    }
  },

  "languages": {
    "Go": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "sh",
          "arguments": [
            "-c",
            "$(which gofumpt) | $(which golines) | $(which gci) print"
          ]
        }
      }
    },
    "JavaScript": {
      "language_servers": ["...", "biome"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "TypeScript": {
      "language_servers": ["...", "biome"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "TSX": {
      "language_servers": ["...", "biome"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "JSON": {
      "language_servers": ["...", "biome"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "Python": {
      "language_servers": ["...", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Rust": {
      "language_servers": ["rust-analyzer", "..."],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports": true,
            "source.fixAll": true
          }
        },
        {
          "language_server": {
            "name": "rust-analyzer"
          }
        }
      ]
    }
  }
}
