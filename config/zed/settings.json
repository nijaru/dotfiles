{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Frappé",
    "dark": "Catppuccin Frappé"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_fallbacks": ["JetBrains Mono", "Zed Plex Mono"],
  "buffer_font_size": 14,
  "preferred_line_length": 88,
  "wrap_guides": [80],
  "soft_wrap": "editor_width",
  "autosave": "on_focus_change",
  "active_pane_modifiers": { "inactive_opacity": 0.9 },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "terminal": {
    "enabled": false
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    }
  },

  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "ignore": ["E501"]
          }
        }
      }
    },
    "mojo-lsp": {
      "binary": {
        "path": "magic",
        "arguments": ["run", "mojo-lsp-server"]
      }
    }
  },

  "languages": {
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "language_servers": ["gopls"],
      "formatter": {
        "external": {
          "command": "gofumpt"
          // "command": "sh",
          // "arguments": ["-c", "$(which gofumpt) | $(which golines) || exit 1"]
        }
      }
    },

    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "language_servers": ["ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },

    "Mojo": {
      "language_servers": ["mojo-lsp"]
    },

    // "Rust": {
    //   "language_servers": ["rust-analyzer", "..."],
    //   "formatter": [
    //     {
    //       "code_actions": {
    //         "source.organizeImports": true,
    //         "source.fixAll": true
    //       }
    //     },
    //     {
    //       "language_server": {
    //         "name": "rust-analyzer"
    //       }
    //     }
    //   ]
    // },

    "C++": {
      "preferred_line_length": 88,
      "tab_size": 4,
      "language_servers": ["clangd"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.clangd": true,
            "source.fixAll.clangd": true
          }
        },
        {
          "language_server": {
            "name": "clangd"
          }
        }
      ],
      "language_server": {
        "clangd": {
          "args": [
            "--background-index",
            "--clang-tidy",
            "--completion-style=detailed",
            "--header-insertion=iwyu",
            "--suggest-missing-includes",
            "--std=c++23",
            "--query-driver=/usr/bin/clang++",
            "-j=0",
            "-Wno-c++11-extensions",
            "-Wno-c++17-extensions"
          ]
        }
      }
    },

    "JavaScript": {
      "language_servers": ["...", "biome"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },

    "TypeScript": {
      "language_servers": ["...", "biome"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },

    "TSX": {
      "language_servers": ["...", "biome"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },

    "JSON": {
      "language_servers": ["...", "biome"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.biome": true,
            "source.fixAll.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    }
  }
}
