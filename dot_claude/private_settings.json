{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"alwaysThinkingEnabled": true,
	"hooks": {
		"PreCompact": [
			{
				"hooks": [
					{
						"command": "command -v bd >/dev/null && bd prime || true",
						"type": "command",
						"timeout": 10
					}
				],
				"matcher": ""
			}
		],
		"SessionStart": [
			{
				"hooks": [
					{
						"command": "command -v bd >/dev/null && bd prime || true",
						"type": "command",
						"timeout": 10
					}
				],
				"matcher": ""
			}
		],
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/auto-format.sh",
						"timeout": 30
					}
				]
			}
		]
	},
	"includeCoAuthoredBy": false,
	"permissions": {
		"defaultMode": "bypassPermissions"
	},
	"statusLine": {
		"command": "bash ~/.claude/statusline-command.sh",
		"type": "command"
	}
}
