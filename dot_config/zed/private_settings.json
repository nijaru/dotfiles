{
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Frapp√©"
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font"],
  "buffer_font_size": 14,
  "agent_buffer_font_size": 14,
  "active_pane_modifiers": {
    "inactive_opacity": 0.9
  },
  "wrap_guides": [80],
  "preferred_line_length": 88,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": "on_focus_change",
  "languages": {
    "C++": {
      "code_actions_on_format": {
        "source.organizeImports.clangd": true,
        "source.fixAll.clangd": true
      }
    },
    "Go": {
      "hard_tabs": true,
      "language_servers": ["gopls"],
      "formatter": {
        "external": {
          "command": "golines",
          "arguments": ["-m", "gofumpt"]
        }
      },
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": { "language_servers": ["oxc", "!eslint", "..."] },
    "TypeScript": { "language_servers": ["oxc", "!eslint", "..."] },
    "TSX": { "language_servers": ["oxc", "!eslint", "..."] },
    "Python": {
      "language_servers": ["ruff", "ty"],
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports": true
      },
      "formatter": []
    },
    "Rust": {
      "hard_tabs": false,
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports": true
      }
    }
  }
}