{
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Frapp√©",
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["JetBrains Mono", "JetBrainsMono Nerd Font", ".ZedMono"],
  "buffer_font_size": 14,
  "agent_buffer_font_size": 14,
  "active_pane_modifiers": {
    "inactive_opacity": 0.9,
  },
  // "auto_signature_help": true,
  "wrap_guides": [80],
  // "inlay_hints": {
  //   "enabled": true,
  // },
  // "tabs": {
  //   "git_status": true,
  //   "file_icons": true,
  // },
  // "file_finder": {
  //   "modal_max_width": "medium",
  // },
  "preferred_line_length": 88,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "autosave": "on_focus_change",
  "languages": {
    "C++": {
      "code_actions_on_format": {
        "source.organizeImports.clangd": true,
        "source.fixAll.clangd": true,
      },
    },
    "Go": {
      "hard_tabs": true,
      "language_servers": ["gopls"],
      "formatter": {
        "external": {
          "command": "golines",
          "arguments": ["-m", "gofumpt"],
        },
      },
      "code_actions_on_format": {
        "source.organizeImports": true,
      },
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "JSON": {
      "language_servers": ["..."],
    },
    "JSONC": {
      "language_servers": ["..."],
    },
    "Python": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports": true,
      },
    },
    "Rust": {
      "hard_tabs": false,
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports": true,
      },
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "ignore": ["E501"],
          },
        },
      },
    },
  },
}
