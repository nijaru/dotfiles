{
  "globalShortcut": "Alt+Space",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "context7-mcp-server"
      ]
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "{{ .exa_api_key }}"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@brave/brave-search-mcp-server"
      ],
      "env": {
        "BRAVE_API_KEY": "{{ .brave_api_key }}"
      }
    }
  }
}
