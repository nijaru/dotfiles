#!/usr/bin/env zsh

echo "Loading aliases file..."

# Source git aliases
source ~/.aliases-git

###################
# Modern CLI Tools
###################
# File operations and viewing
command -v bat >/dev/null 2>&1 && alias cat="bat --plain --paging=never"
command -v eza >/dev/null 2>&1 && alias ls="eza --icons --git" && \
    alias ll="eza -la --icons --git" && \
    alias tree="eza --tree --icons"
command -v zoxide >/dev/null 2>&1 && alias cd="z"

# Search and find
command -v rg >/dev/null 2>&1 && alias grep="rg"
command -v fd >/dev/null 2>&1 && alias find="fd"
command -v fzf >/dev/null 2>&1 && alias preview="fzf --preview 'bat --color=always {}'"

# System monitoring
command -v duf >/dev/null 2>&1 && alias df="duf"
command -v dust >/dev/null 2>&1 && alias du="dust"
command -v procs >/dev/null 2>&1 && alias ps="procs"
command -v btop >/dev/null 2>&1 && alias top="btop"
command -v htop >/dev/null 2>&1 && alias htop="htop --tree"

# File comparison and network
command -v delta >/dev/null 2>&1 && alias diff="delta"
command -v doggo >/dev/null 2>&1 && alias dig="doggo"
command -v gping >/dev/null 2>&1 && alias ping="gping"
command -v curlie >/dev/null 2>&1 && alias curl="curlie"

# Performance testing
command -v hyperfine >/dev/null 2>&1 && alias bench="hyperfine"

###################
# Enhanced File Operations
###################
# Safe operations
alias rm="rm -I"                          # Interactive removal
alias cp="cp -ia"                         # Interactive and archive
alias mv="mv -i"                          # Interactive move
alias ln="ln -v"                          # Verbose linking
alias chmod="chmod -v --preserve-root"    # Verbose mode
alias chown="chown -v --preserve-root"    # Verbose mode
alias mkdir="mkdir -pv"                   # Create parent dirs

# Advanced operations
alias cpv="rsync -ah --info=progress2"    # Copy with progress
alias mvv="rsync -ah --remove-source-files --info=progress2"  # Move with progress
alias symlink="ln -sf"                    # Force symbolic link
alias rename="perl-rename"                # Batch rename utility
alias pbc='pbcopy'

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"                         # Go back
alias d='dirs -v'                         # List directory stack

# Quick access
alias dl="cd ~/Downloads"
alias doc="cd ~/Documents"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias gh="cd ~/github"

###################
# Development Tools
###################
# Python
alias py="python3"
alias python="python3"
alias pip="python3 -m pip"
alias pip-update="pip list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 pip install -U"
alias pyenv-update="pyenv update"

# Node.js
alias pn="pnpm"
alias nr="npm run"
alias nrd="npm run dev"
alias nrb="npm run build"
alias nrt="npm run test"
alias ncu="npx npm-check-updates -i"

# Go
alias gmt="go mod tidy"
alias gv="go vet"
alias gta="go test ./..."
alias gcv="go mod verify"
alias gor="go run"
alias gob="go build"

# Rust
alias cb="cargo build"
alias cr="cargo run"
alias ct="cargo test"
alias cf="cargo fmt"
alias cc="cargo check"
alias cl="cargo clippy"
alias cw="cargo watch -x run"
alias cu="cargo update"
